{
  "extends": "./shared/configs/tsconfig.base.json",
  "include": [
    "packages/**/*.ts",
    "shared/common/**/*.ts",
  ],
  "exclude": [
    ".git",
    "lib",
    "module",
    "node_modules",
    ".cache"
  ],
  "compilerOptions": {
    // directories
    "outDir": "lib",
    "rootDir": ".",
    // alias
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "packages/@aglabo-actions/tool-installer/src/*",
      ]
    },
    // types
    // cache
    "tsBuildInfoFile": ".cache/tsbuildinfo"
  }
}
