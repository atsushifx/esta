{
  "extends": "./base/configs/tsconfig.base.json",
  "exclude": [
    ".git",
    "lib",
    "module",
    "node_modules",
    "dist",
    ".cache"
  ],
  "compilerOptions": {
    // directories
    "outDir": "dist",
    "rootDir": ".",
    // alias
    "baseUrl": ".",
    "paths": {
      // monorepo 全体共通の shared
      "@shared/*": [
        "shared/packages/*"
      ],
      // agla packages
      "@agla-utils/*": [
        "packages/@agla-utils/*/",
        "packages/@agla-utils/*/src"
      ],
      "@agla-e2e/*": [
        "packages/@agla-e2e/*/",
        "packages/@agla-e2e/*/src"
      ],
      // esta packages
      "@esta-core/*": [
        "packages/@esta-core/*/",
        "packages/@esta-core/*/src"
      ],
      "@esta-runtime/*": [
        "packages/@esta-runtime/*/",
        "packages/@esta-runtime/*/src"
      ],
      "@esta-actions/*": [
        "packages/@esta-actions/*/",
        "packages/@esta-actions/*/src"
      ],
      "@esta-utils/*": [
        "packages/@esta-utils/*/",
        "packages/@esta-utils/*/src"
      ]
    }
  }
  // types
}
