{
  "@(#)": "tsconfig.json: for @aglabo-actions/tool-installer",
  "extends": "../../../shared/configs/tsconfig.base.json",
  // directory definition
  "compilerOptions": {
    // in/out dir
    "rootDir": "./",
    "outDir": "lib",
    // aliases
    "baseUrl": "./",
    "paths": {
      // ローカルのプラグイン、ルール
      "@/*": [
        "src/*"
      ],
      // Monorepo 共有用
      "@shared/*": [
        "../../../shared/*"
      ],
      "@shared/constants": [
        "src/shared/constants"
      ],
      "@shared/types": [
        "src/shared/types"
      ]
    },
    // incremental build info
    "tsBuildInfoFile": ".cache/tsbuildinfo"
  },
  // files
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules",
    "lib",
    "module"
  ],
  // references
  "references": []
}
