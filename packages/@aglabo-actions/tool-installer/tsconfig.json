{
  "extends": "../../../shared/configs/tsconfig.base.json",
  "include": [
    "src/**/*.ts",
    "shared/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    ".git",
    "lib",
    "module",
    "node_modules",
    ".cache"
  ],
  "compilerOptions": {
    // directories
    "outDir": "lib",
    "rootDir": ".",
    // alias
    "baseUrl": ".",
    // "paths": {    },
    // types
    // "typesRoots": [    ],
    // cache
    "tsBuildInfoFile": ".cache/tsbuildinfo"
  }
}
