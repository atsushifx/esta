{
  "@(#)": "tsconfig.json: for @aglabo-actions/tool-installer",
  "extends": "../../../shared/configs/tsconfig.base.json",
  // files
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules",
    "lib",
    "module"
  ],
  // compiler options
  "compilerOptions": {
    // in/out dir
    "rootDir": "./",
    "outDir": "lib",
    // aliases
    "baseUrl": "./",
    "paths": {
      // ローカルのプラグイン、ルール
      "@/*": [
        "src/*"
      ],
    },
    // types
    "typeRoots": [
      "../../../node_modules/@types/",
      "./src/shared/types/",
    ],
    // incremental build info
    "tsBuildInfoFile": ".cache/tsbuildinfo"
  },
  // references
  "references": []
}
