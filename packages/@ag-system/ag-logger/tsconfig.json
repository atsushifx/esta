{
  "extends": "../../../shared/configs/tsconfig.base.json",
  "include": [
    "src/**/*.ts",
    "shared/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    ".git",
    "lib",
    "module",
    "node_modules",
    ".cache"
  ],
  "compilerOptions": {
    // directories
    "outDir": "lib",
    "rootDir": "./src",
    // alias
    "baseUrl": "./",
    // "paths": {},
    // types
    // cache
    "tsBuildInfoFile": ".cache/tsbuild-cache/tsbuildinfo"
  }
}
