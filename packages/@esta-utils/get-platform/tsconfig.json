{
  "extends": "../../../base/configs/tsconfig.base.json",
  // compiler options
  "include": [
    "src/**/*.ts",
    "shared/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    ".git",
    "lib",
    "module",
    "node_modules",
    ".cache"
  ],
  "compilerOptions": {
    // directories
    "outDir": "lib",
    "rootDir": "./",
    // alias definitions
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*",
        "src/*/index"
      ],
      "@shared/*": [
        "shared/*",
        "shared/*/index"
      ]
    },
    // types
    // typesRoots: [    ],
    // cache
    "tsBuildInfoFile": ".cache/tsbuild-cache/tsbuildinfo"
  }
}
