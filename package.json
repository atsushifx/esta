{
  "name": "setup-tool-with-eget",
  "private": true,
  "version": "0.1.0",
  "description": "GitHub Action to install CLI tools via eget (monorepo package)",
  "author": "atsushifx <https://github.com/atsushifx>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "keywords": [
    "github-action",
    "eget",
    "cli-installer",
    "typescript",
    "monorepo"
  ],
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@ls-lint/ls-lint": "^2.3.1",
    "@secretlint/secretlint-rule-preset-recommend": "^9.3.4",
    "@textlint/types": "^14.8.4",
    "@types/node": "^22.15.32",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "cspell": "^8.19.4",
    "eslint": "^9.29.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.32.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "build:esm": "pnpm -r run build:esm",
    "build:cjs": "pnpm -r run build:cjs",
    "clean": "pnpm -r run clean",
    "format:dprint": "dprint fmt",
    "check:dprint": "dprint check",
    "check:types": "pnpm -r run check:types",
    "check:spells": "pnpm exec cspell  --config .vscode/cspell.json --cache --cache-location .cache/cspell/cSpellCache",
    "lint": "pnpm -r run lint",
    "lint:types": "pnpm -r run lint:types",
    "lint:fix": "echo 'skip where project root'",
    "lint-all": "pnpm exec eslint --config ./configs/eslint.config.js --cache --cache-location .cache/eslint-cache/esLintCache",
    "lint-all:types": "pnpm exec eslint --config ./configs/eslint.config.typed.js  --cache --cache-location .cache/eslint-cache/esLintCache",
    "lint:filename": "pnpm exec ls-lint --config ./configs/ls-lint.yaml ",
    "lint:text": "textlint --config ./configs/textlintrc.yaml --cache --cache-location .cache/textlint-cache/textlintCache ",
    "lint:markdown": "markdownlint-cli2 --config ./configs/.markdownlint.yaml ",
    "lint:secrets": "secretlint --secretlintrc ./configs/secretlint.config.yaml --secretlintignore .gitignore --maskSecrets **/*"
  }
}
